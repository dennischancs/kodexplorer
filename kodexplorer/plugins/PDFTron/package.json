{
	"id":"PDFTron",
	"name":"{{LNG.PDFTron.meta.name}}",
	"title":"{{LNG.PDFTron.meta.title}}",
	"version":"1.3",
	"category":"file",
	"source":{
		"icon":"{{pluginHost}}static/images/icon.png",
		"screenshoot":[
			"{{pluginHost}}static/images/screenshot.png"
		]
	},
	"description":"{{LNG.PDFTron.meta.desc}}",
	"auther":{
		"copyright":"zhtengw",
		"homePage":"https://github.com/zhtengw/kodexplorer-plugins"
	},
	"configItem":{
		"formStyle":{
			"className":"",
			"tabs":[
				{
					"name":"{{LNG.Plugin.tab.basic}}",
					"field":["pluginAuth","sep001","openWith","darktheme","fileExt","fileSort","savetofile","licenseKey"]
				}
			]
		},
		"pluginAuth":{
			"type":"userSelect",
			"value":"all:1",
			"display":"{{LNG.Plugin.config.auth}}",
			"desc":"{{LNG.Plugin.config.authDesc}}",
			"require":1
		},
		"sep001":"<hr/>",
		"openWith":{
			"type":"radio",
			"value":"dialog",
			"display":"{{LNG.Plugin.Config.openWith}}",
			"info":[
				["dialog","{{LNG.Plugin.Config.openWithDilog}}"],
				["window","{{LNG.Plugin.Config.openWithWindow}}"]
			]
		},
		"darktheme":{
			"type":"switch",
			"value":0,
			"display":"{{LNG.PDFTron.Config.darkTheme}}"
        },
		"fileExt":{
			"type":"tags",
			"display":"{{LNG.Plugin.Config.fileExt}}",
			"desc":"{{LNG.Plugin.Config.fileExtDesc}}",
			"value":"pdf"
		},
		"fileSort":{
			"type":"number",
			"display":"{{LNG.Plugin.Config.fileSort}}",
			"desc":"{{LNG.Plugin.Config.fileSortDesc}}",
			"value":1000
		},
		"savetofile":{
			"type":"switch",
			"value":0,
			"display":"{{LNG.PDFTron.Config.savetofile}}",
			"desc":"{{LNG.PDFTron.Config.savetofileDesc}}"
        },
        "licenseKey":{
			"type":"input",
			"value":"",
			"display":"{{LNG.PDFTron.Config.licenseKey}}",
			"desc":"{{LNG.PDFTron.Config.licenseKeyDesc}}"
        }
	}
}
